<launch>
    <arg name="model" default="$(find robot_description)/robot/urdf/Combination.xacro" />
    <arg name="rvizconfig" default="$(find robot_description)/config/rviz_config.rviz" />

    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
 
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/> <!--没有参数-->
</launch>